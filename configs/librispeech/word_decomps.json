{
  "seed" : 0,
  "data" : {
    "dataset" : "librispeech",
    "data_path" : "<data_path>",
    "num_features" : 80,
    "tokens" : "<replace_me>/word_pieces_tokens_1000.txt",
    "prepend_wordsep" : true
  },
  "criterion_type" : "transducer",
  "criterion" : {
    "blank" : "optional",
    "allow_repeats" : false 
  },
  "model_type" : "tds",
  "model" : {
    "tds_groups" : [
      { "channels" : 4, "num_blocks" : 5 },
      { "channels" : 8, "num_blocks" : 5 },
      { "channels" : 16, "num_blocks" : 5 }
    ],
    "kernel_size" : 5,
    "dropout" : 0.1
  },
  "optim" : {
    "batch_size" : 32,
    "epochs" : 400,
    "learning_rate" : 2e-1,
    "step_size" : 100,
    "max_grad_norm" : 5
  }
}
